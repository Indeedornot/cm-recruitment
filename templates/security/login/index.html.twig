{# templates/security/login.html.twig #}
{% extends 'layouts/base.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block body %}
    <div class="d-flex justify-content-center w-100 pt-4">
        <div class="card bg-light" style="width: 800px;">
            {% if app.user %}
                <div class="card-body">
                    <div class="mb-3">
                        You are logged in as {{ app.user.name }},
                        <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                </div>
            {% else %}
                <form class="form-horizontal" role="form" method="post">
                    <div class="card-header py-3 fw-semibold">Please sign in</div>
                    <div class="card-body gap-2 d-grid py-4">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <label for="email" class="col-md-4 control-label">
                                E-Mail Address
                            </label>
                            <div class="col-md-12">
                                <input
                                    id="inputEmail"
                                    type="email"
                                    class="form-control"
                                    name="_username"
                                    value="{{ last_username }}"
                                    required
                                    autofocus
                                />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password" class="col-md-4 control-label">
                                Password
                            </label>
                            <div class="col-md-12">
                                <input
                                    id="inputPassword"
                                    type="password"
                                    class="form-control"
                                    name="_password"
                                    required
                                />
                            </div>
                        </div>
                        <input
                            type="hidden"
                            name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        />
                        <input
                            type="hidden"
                            name="_target_path"
                            value="{{ app.request.get('redirect_after') }}"
                        />
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-sign-in"></i> Login
                                </button>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="card-footer py-3">
                    Don't have an account yet?
                    <a href="{{ path('app_registration') }}">Register</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
