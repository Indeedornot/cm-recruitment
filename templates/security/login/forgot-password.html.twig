{% extends 'layouts/base.html.twig' %}
{% form_theme form 'common/forms/bundle.html.twig' %}

{% block body %}
    <div class="container container-y">
        <div class="d-flex justify-content-center">
            <div class="card" style="width: clamp(300px,50%,800px)">
                <div class="card-header">{{ 'security.form.forgot_password.header'|trans }}</div>
                {{ form_start(form) }}
                <div class="card-body">
                    <div>
                        {{ form_row(form.email) }}
                        {{ form_row(form.submit, {row_attr: {class: 'mb-0'}}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

