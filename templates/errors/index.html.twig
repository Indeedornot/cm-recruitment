{# @var error \Exception #}

{% extends 'layouts/base.html.twig' %}

{% block title %}
    {{ title|default('Error') }}
{% endblock %}

{% block body %}
    <div class="card">
        {% if error is instanceof('Throwable') %}
            <div class="card-header">
                <h1>{{ error.message }}</h1>
            </div>
            <div class="card-body">
                <p>{{ error.file }}:{{ error.line }}</p>
                <hr/>
                <pre>{{ error.trace|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
            </div>
        {% else %}
            <div class="card-header">
                <h1>{{ error }}</h1>
            </div>
        {% endif %}
    </div>
{% endblock %}
