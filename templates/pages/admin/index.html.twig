{% extends 'layouts/base.html.twig' %}
{% import 'pages/admin/macros.html.twig' as macros %}
{% block body %}
    <div class="pt-4">
        <div class="card mx-auto" style="width: 800px">
            <div class="card-header">{{ 'admin.dashboard.header'|trans }}</div>
            <div class="card-body">
                <ul class="list-group">
                    {% if is_super_admin() %}
                        {{ macros.nav_item('admin.dashboard.items.admin'|trans, 'fa-users', url('app_admin_admins'), 'a') }}
                        {{ macros.nav_item('admin.dashboard.items.create_admin'|trans, 'fa-user-plus', url('app_admin_create_account'), 'a') }}
                        {{ macros.nav_item('admin.dashboard.items.client'|trans, 'fa-users', url('app_admin_users'), 'a') }}
                        {{ macros.nav_item('admin.dashboard.items.global_config'|trans, 'fa-cogs', url('app_admin_global_config'), 'a') }}
                    {% endif %}

                    {% if is_super_admin() %}
                        {% set postingText = 'admin.dashboard.items.posting.super_admin'|trans %}
                    {% else %}
                        {% set postingText = 'admin.dashboard.items.posting.admin'|trans %}
                    {% endif %}
                    {{ macros.nav_item(postingText, 'fa-list-check', url('app_admin_posting_index'), 'a') }}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
