{% extends 'layouts/base.html.twig' %}
{% block body %}
    {% import 'pages/admin/accounts/macros.html.twig' as common %}

    {% set tableId = get_id() %}
    <div class="container-fluid container-y" id="{{ tableId }}">
        <table class="table table-striped rounded overflow-hidden table-cells-vertical">
            <thead>
            <tr>
                <th>{{ 'common.row_number'|trans }}</th>
                <th>{{ 'components.user.name'|trans }}</th>
                <th>{{ 'components.user.email'|trans }}</th>
                <th>{{ 'components.user.role'|trans({multiple: 'true'}) }}</th>
                <th>{{ 'common.actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ loop.index + (page - 1) * limit }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.readableRoles|map((role) => role|trans)|join(', ') }}</td>
                    <td>
                        {% if is_super_admin() %}
                            <button type="button"
                                    class="btn icon-link link-danger delete-user-btn"
                                    data-user-id="{{ user.id }}"
                                    title="{{ 'common.delete'|trans }}"
                            >
                                <i class="fa-solid fa-user-xmark"></i>
                            </button>
                            <a
                                class="btn icon-link link-primary"
                                title="{{ 'common.edit'|trans }}"
                                href="{{ path('app_admin_edit_account', {'id': user.id}) }}"
                            >
                                <i class="fa-solid fa-user-edit"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5">
                    {{ common.pagination('app_admin_users', page, total, limit) }}
                </td>
            </tr>
            </tfoot>
        </table>
    </div>

    {% set javascript %}
        {{ common.delete_user_script(tableId) }}
    {% endset %}
    {{ assets_scripts().addScript(javascript) }}
{% endblock %}

