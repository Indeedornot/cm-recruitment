{% set actionRow %}
    {% set canEdit = posting.canEdit(app.user) %}
    <div class="d-flex justify-content-end gap-1">
        <a class="btn btn-secondary"
           href="{{ path('app_admin_posting_show', {'id': posting.id}) }}"
        >
            <i class="fa-solid fa-eye"></i>
        </a>
        <a class="btn btn-primary {% if canEdit %}disabled{% endif %}"
           href="{{ path('app_admin_posting_edit', {'id': posting.id}) }}"
        >
            <i class="fa-solid fa-pen"></i>
        </a>
        <a class="btn btn-danger {% if canEdit %}disabled{% endif %}"
            {#           TODO: #}
            {#            href="{{ path('app_admin_posting_delete', {'id': posting.id}) }}" #}
        >
            <i class="fa-solid fa-trash"></i>
        </a>
    </div>
{% endset %}

{% embed 'common/accordion-item.html.twig' with {
    headerTag: 'h5'
} %}
    {% block buttonText %}
        {% do attrs.append('class', 'px-2 fw-bold fs-5') %}
        {{ loop.index }}. {{ posting.title }}
        <span class="text-secondary ps-2">- {{ posting.assignedTo.name }}</span>
        <span class="ps-2">
            - {{ 'components.posting.candidates_count'|trans({count: posting.applications|length}) }}
        </span>
    {% endblock %}
    {% block body %}
        <p>{{ posting.description }}</p>
        {{ actionRow }}
    {% endblock %}
{% endembed %}
