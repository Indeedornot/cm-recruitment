{% extends 'layouts/base.html.twig' %}
{% form_theme form 'common/forms/bundle.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h2>{{ posting.title }}
                <span class="text-secondary">
                    {{ 'components.posting.assigned_to'|trans({'name': posting.assignedTo.name}) }}
                </span>
            </h2>
            <p>{{ posting.description }}</p>
            {{ form_start(form) }}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message|raw }}
                </div>
            {% endfor %}
            <div class="mb-3">
                <div class="card">
                    <div class="card-header">
                        Odpowiedzi
                    </div>
                    <div class="card-body">
                        {% for field in form.children|filter(field => field.vars.name starts with 'answer_') %}
                            <div class="mb-3">
                                {{ form_row(field) }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    {{ form_button(form, {variant: 'primary', icon: 'user', label: 'Save'}) }}
                    {{ form_button(form, {variant: 'secondary', icon: 'door-open', label: 'Back', href: path('app_user_index')}) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
